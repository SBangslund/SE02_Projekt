<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTimePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aservio.presentation.journal.controllers.overview.NotesController">
   <children>
      <HBox>
         <children>
            <VBox alignment="TOP_CENTER" spacing="20.0">
               <children>
                  <DatePicker fx:id="datePicker" promptText="Dato" />
                  <JFXTimePicker fx:id="startTimePicker" promptText="Start tidspunkt" />
                  <JFXTimePicker fx:id="endTimePicker" promptText="Slut tidspunkt" />
                  <Pane VBox.vgrow="ALWAYS" />
                  <HBox alignment="BOTTOM_CENTER" spacing="15.0">
                     <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonEvent" text="Afbryd" />
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonEvent" text="Gem" />
                     </children>
                  </HBox>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets bottom="5.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label fx:id="titelLabel" text="Titel" />
                  <TextArea fx:id="noteTextArea" editable="false" />
                  <Label fx:id="locationLabel" text="Sted" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
