<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aservio.presentation.journal.controllers.overview.NotesController">
   <children>
      <HBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" spacing="20.0">
               <children>
                  <Label fx:id="dateLabel" text="Dato" />
                  <Label fx:id="startTimeLabel" text="Start tidspunkt" />
                  <Label fx:id="endTimeLabel" text="Slut tidspunkt" />
                  <Pane VBox.vgrow="ALWAYS" />
                  <Button fx:id="modifyButton" mnemonicParsing="false" onAction="#modifyButtonEvent" text="Rediger" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets bottom="5.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="titelLabel" text="Titel" />
                  <TextArea fx:id="noteTextArea" editable="false" VBox.vgrow="ALWAYS" />
                  <Label fx:id="locationLabel" text="Sted" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="10.0" right="20.0" />
   </padding>
</VBox>
