<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aservio.platform.FXMLLoginController">
   <children>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
         <children>
            <ImageView fx:id="logoImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ImageView>
            <Label fx:id="inputWarningLabel" textFill="RED" />
            <TextField fx:id="usernameField" onAction="#checkUserInput" prefHeight="26.0" prefWidth="234.0" promptText="Username" stylesheets="@CSSLogin.css" />
            <PasswordField fx:id="passwordField" onAction="#checkUserInput" prefHeight="32.0" prefWidth="236.0" promptText="Password" stylesheets="@CSSLogin.css" />
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="237.0">
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#attemptLogin" stylesheets="@CSSLogin.css" text="Login" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
